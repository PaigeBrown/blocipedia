<h1> Public Wikis </h1>

<div class="row">
    <div class="col-md-8">
      <% Wiki.where(private: false).each do |wiki| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to wiki.title, wiki %>
            </h4>
            <small>
              <%= wiki.body %>
            </small>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
    </div>
</div>

<% if current_user.premium? %>
<h1> Private Wikis</h1>
<% Wiki.where(private: nil).each do |wiki| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to wiki.title, wiki %>
            </h4>
            <small>
              <%= wiki.body %>
            </small>
          </div>
        </div>
      <% end %>
    </div>
  
  <% end %>

